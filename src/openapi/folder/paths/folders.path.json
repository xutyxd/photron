                                "$ref": "../examples/folder.example.json"
                            },
                            "allOf": [
                                {
                                    "$ref": "../../common/response.model.json"
                                },
                                {
                                    "type": "object",
                                    "required": ["response"],
                                    "properties": {
                                        "response": {
