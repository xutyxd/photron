{

    "post": {
        "tags": [ "Folders" ],
        "summary": "Create a folder",
        "requestBody": {
            "content": {
                "application/json": {
                    "schema": {
                        "$ref": "../models/partial-folder.model.json",
                        "example": {
                            "$ref": "../examples/folder.example.json"
                        }
                    }
                }
            }
        },
        "responses": {
            "200": {
                "description": "Folder created by user",
                "content": {
                    "application/json": {
                        "schema": {
                            "example": {
                                "$ref": "../examples/folder.example.json"
                            },
                            "allOf": [
